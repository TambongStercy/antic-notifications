{
  "name": "antic-notification-service",
  "version": "1.0.0",
  "description": "A notification service for sending WhatsApp and Telegram messages via API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/index.ts",
    "start:dev": "cross-env NODE_ENV=development ts-node --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t antic-notification-service .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f notification-service",
    "init-db": "cross-env ts-node --transpile-only -r tsconfig-paths/register scripts/init-db.ts",
    "init-db:samples": "cross-env ts-node --transpile-only -r tsconfig-paths/register scripts/init-db.ts --samples"
  },
  "keywords": [
    "notification",
    "whatsapp",
    "telegram",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "Tambong Stercy",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.7.18",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.4",
    "morgan": "^1.10.0",
    "node-telegram-bot-api": "^0.66.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "telegram": "^2.26.22",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.17.0",
    "@types/node-telegram-bot-api": "^0.64.10",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "form-data": "^4.0.0",
    "tough-cookie": "^4.1.3",
    "tar-fs": "^3.0.4",
    "ws": "^8.18.0"
  }
}
